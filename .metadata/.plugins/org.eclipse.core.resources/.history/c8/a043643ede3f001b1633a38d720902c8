package multiThreading;

class A {
	int num;
	
	public void setNum(int num) {
		this.num = num;
	}
	
	public int getName() {
		return num;
	}
}

class Producer implements Runnable {
	
	A a;
	
	Producer(A a) {
		this.a = a;
		Thread t = new Thread(this, "Producer");
		t.start();
	}
	
	public void run() {
		int i = 0;
		while(true) {
			a.setNum(i++);
			try {
				Thread.sleep(1000);
			} catch (Exception e) {}
		}
	}
}

class Consumer implements Runnable {
	
	A a;
	
	Consumer(A a) {
		this.a = a;
		Thread t = new Thread(this, "Consumer");
		t.start();
	}
	
	public void run() {
		int i = 0;
		while(true) {
			a.setNum(i++);
			try {
				Thread.sleep(1000);
			} catch (Exception e) {}
		}
	}
}

public class InterThreadCommunication {

	public static void main(String[] args) {
		
	}

}
